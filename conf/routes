# Routes

GET     /                           	controllers.Application.index()

GET     /jugadores                  	controllers.Application.obtenerJugadores()
GET     /jugadores/:nombre          	controllers.Application.detallesJugador(nombre)

GET		/generar-equipos				controllers.Application.generarEquipos()
GET		/generar-equipos-opciones  		controllers.Application.generarEquiposOpciones()

POST	/confirmar-partido				controllers.Application.confirmarPartido()

GET		/criterios-ordenamiento			controllers.Application.obtenerCriteriosOrdenamiento()
GET		/criterios-ordenamiento/:id		controllers.Application.setCriterioOrdenamiento(id)

GET		/criterios-armado				controllers.Application.obtenerCriteriosArmado()
GET		/criterios-armado/:id			controllers.Application.setCriterioArmado(id)

GET		/detalle-jugador				controllers.Application.showJugadorView()
GET		/listar-jugadores				controllers.Application.showJugadoresView()
GET		/busqueda-jugadores				controllers.Application.showBusquedaJugadoresView()

GET     /assets/*file               	controllers.Assets.at(path="/public", file)